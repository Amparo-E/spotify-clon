---
import Time from "../icons/Time.astro";
import { type Song } from "../lib/data";

export interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y-2 divide-gray-500/20">
  <thead class="">
    <tr class="text-gray-400 text-sm">
      <th class="px-2 py-2 font-normal">#</th>
      <th class="px-4 py-2 font-normal">Title</th>
      <th class="px-4 py-2 font-normal">Album</th>
      <th class="px-4 py-2 font-normal"><Time /></th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-[16px]"></tr>
    {
      songs.map((song, index) => (
        <tr class="text-gray-400 text-sm font-normal hover:bg-white/10">
          <td class="px-2 py-2 w-1">{index + 1}</td>
          <td class="px-4 py-2 flex gap-2">
            <picture>
              <img src={song.image} alt={song.title} class="w-10 h-10" />
            </picture>
            <div class="flex flex-col">
              <h3 class="text-white font-normal text-base hover:underline">
                {song.title}
              </h3>
              <span class=" font-normal hover:underline">
                {song.artists.join(", ")}
              </span>
            </div>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="px-4 py-2">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
